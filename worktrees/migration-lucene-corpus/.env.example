# Dictionary Analytics Environment Configuration

# BaseX Configuration (XML Database)
BASEX_HOST=localhost
BASEX_PORT=1984
BASEX_USERNAME=admin
BASEX_PASSWORD=admin
BASEX_DATABASE=dictionary
USE_MOCK_DATABASE=false

# PostgreSQL Configuration (Analytics & Corpus Processing)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dictionary_analytics
POSTGRES_USER=dict_user
POSTGRES_PASSWORD=dict_pass
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# PostgreSQL Test Configuration
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5432
POSTGRES_TEST_DB=dictionary_test
POSTGRES_TEST_USER=dict_user
POSTGRES_TEST_PASSWORD=dict_pass

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=100
CORPUS_BATCH_SIZE=1000
PROCESSING_TIMEOUT=300

# Testing Configuration
TESTING=false
PYTEST_CURRENT_TEST=
LOG_LEVEL=INFO

# Docker Configuration (for docker-compose)
# Uncomment and modify for Docker deployment
# POSTGRES_HOST=postgres
# POSTGRES_TEST_HOST=postgres_test
# BASEX_HOST=basex
# REDIS_HOST=redis

# Windows PowerShell Examples:
# $env:POSTGRES_HOST="localhost"
# $env:POSTGRES_PASSWORD="dict_pass"

# Windows Command Prompt Examples:
# set POSTGRES_HOST=localhost
# set POSTGRES_PASSWORD=dict_pass

# Linux/Mac Examples:
# export POSTGRES_HOST=localhost
# export POSTGRES_PASSWORD=dict_pass
