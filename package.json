{
  "name": "dictionary-app",
  "version": "1.0.0",
  "description": "Dictionary application with comprehensive form serialization",
  "main": "app/static/js/form-serializer.js",
  "scripts": {
    "test:e2e": "npx playwright test --config=e2e/playwright.config.js",
    "test": "jest",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "test:js:coverage": "jest --coverage",
    "test:lift-serializer": "jest test_lift_xml_serializer",
    "test:python": "python -m pytest tests/unit/ -v",
    "test:python:integration": "python -m pytest tests/integration/ -v",
    "test:all": "npm run test:js && npm run test:python && npm run test:python:integration",
    "test:python-with-js": "python -m pytest --js-tests",
    "test:python-with-js-lint": "python -m pytest --js-tests --js-lint",
    "test:templates": "python -m pytest tests/unit/test_template_validation.py -v",
    "test:all-with-templates": "npm run test:js && npm run test:python && npm run test:python:integration && npm run test:templates",
    "lint:js": "eslint app/static/js/ --ext .js",
    "format:js": "prettier --write app/static/js/**/*.js tests/unit/**/*.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "adm-zip": "^0.5.9",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^2.0.0",
    "playwright": "^1.40.0",
    "prettier": "^2.0.0"
  },
  "keywords": [
    "dictionary",
    "form-serialization",
    "javascript",
    "python",
    "flask"
  ],
  "author": "Dictionary App Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
