# BaseX Configuration
# Set these environment variables to connect to your BaseX server

# For Windows (PowerShell):
$env:BASEX_HOST="localhost"
$env:BASEX_PORT="1984"
$env:BASEX_USERNAME="admin"
$env:BASEX_PASSWORD="admin"
$env:BASEX_DATABASE="dictionary"
$env:USE_MOCK_DATABASE="false"

# For Windows (Command Prompt):
set BASEX_HOST=localhost
set BASEX_PORT=1984
set BASEX_USERNAME=admin
set BASEX_PASSWORD=admin
set BASEX_DATABASE=dictionary
set USE_MOCK_DATABASE=false

# For Linux/Mac:
export BASEX_HOST=localhost
export BASEX_PORT=1984
export BASEX_USERNAME=admin
export BASEX_PASSWORD=admin
export BASEX_DATABASE=dictionary
export USE_MOCK_DATABASE=false
