{
  "template_id": "spelling",
  "name": "Spelling Validation",
  "description": "Hunspell-based spelling validation for text fields. Validates spelling using hunspell dictionaries.",
  "category": "spelling",
  "version": "1.0",
  "rules": [
    {
      "rule_id": "S1.1.1",
      "name": "lexical_unit_spelling",
      "description": "Validate spelling in lexical unit using project dictionary",
      "category": "spelling",
      "priority": "warning",
      "path": "$.lexical_unit.*",
      "condition": {
        "type": "required"
      },
      "validation": {
        "type": "hunspell",
        "lang_code": "${source_lang_code|en_US}",
        "minWordLength": 3
      },
      "error_message": "Spelling error in lexical unit"
    },
    {
      "rule_id": "S1.1.2",
      "name": "definition_spelling",
      "description": "Validate spelling in definitions",
      "category": "spelling",
      "priority": "informational",
      "path": "$.senses[*].definition.*",
      "condition": {
        "type": "if_present"
      },
      "validation": {
        "type": "hunspell",
        "lang_code": "${target_lang_code|en_US}",
        "minWordLength": 3
      },
      "error_message": "Spelling error in definition"
    },
    {
      "rule_id": "S1.1.3",
      "name": "gloss_spelling",
      "description": "Validate spelling in glosses",
      "category": "spelling",
      "priority": "informational",
      "path": "$.senses[*].gloss.*",
      "condition": {
        "type": "if_present"
      },
      "validation": {
        "type": "hunspell",
        "lang_code": "en_US",
        "minWordLength": 3
      },
      "error_message": "Spelling error in gloss"
    },
    {
      "rule_id": "S1.1.4",
      "name": "note_spelling",
      "description": "Validate spelling in notes",
      "category": "spelling",
      "priority": "informational",
      "path": "$.senses[*].notes[*].text",
      "condition": {
        "type": "if_present"
      },
      "validation": {
        "type": "hunspell",
        "lang_code": "en_US",
        "minWordLength": 3
      },
      "error_message": "Spelling error in note"
    },
    {
      "rule_id": "S2.1.1",
      "name": "custom_function_spelling",
      "description": "Validate spelling using custom function with detailed error messages",
      "category": "spelling",
      "priority": "warning",
      "path": "$.lexical_unit.*",
      "condition": {
        "type": "required"
      },
      "validation": {
        "type": "custom",
        "custom_function": "validate_hunspell_spelling",
        "lang_code": "en_US",
        "minWordLength": 3,
        "ignoreWords": ["test", "demo", "example"]
      },
      "error_message": "Spelling error detected"
    }
  ]
}
